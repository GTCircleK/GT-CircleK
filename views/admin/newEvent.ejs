<!DOCTYPE HTML>
<html>

<head>
    <title>Create Event | GT Circle K</title>
    <meta charset="utf-8" />
    <% include ../partials/head.ejs %>
</head>

<body class="is-preload">

    <div id="page-wrapper">
        <% include ../partials/navbar.ejs %>

        <section id="wrapper">
            <header>
                <div class="inner">
                    <h2>Create Event</h2>
                    <p>Enter details for the new event</p>
                </div>
            </header>

            <div class="wrapper">
                <div class="inner">


                    <h3 class="major">Fill out the forms</h3>

                    <form action="/events" method="POST">
                        <div class="fields">
                            <div class="field">
                                <label for="title">*Event Title</label>
                                <input type="text" id="title" name="event[title]" placeholder="Eg: Trick or Treating"
                                    required />
                            </div>


                            <div id="mutliday-option" class="field">
                                <div class="field">
                                    <label for="from">From</label>
                                    <input type="datetime-local" name="event[from]">
                                </div>
                                <div class="field">
                                    <label for="from">To</label>
                                    <input type="datetime-local" name="event[to]">
                                </div>
                            </div>
                            <div class="field">
                                <label for="description">Description</label>
                                <textarea name="event[description]" id="description" rows="4"
                                    placeholder="Enter a small summary of the event"></textarea>
                            </div>
                            <div class="field">
                                <label for="address">Location</label>
                                <input type="text" name="event[location]" id="address"
                                    placeholder="Eg: The Salvation Army Bellwood Boys and Girls Club" />
                            </div>
                            <div class="field">
                                <label for="address">*Address</label>
                                <input type="text" name="event[address]" id="address"
                                    placeholder="Eg: 99 Lake Dow Rd, McDonough, GA 30252" required />
                            </div>
                            <div class="field">
                                <label for="pickup">Pickup Info</label>
                                <input type="text" name="event[pickup]" id="pickup"
                                    placeholder="Enter details about pickup/carpool" />
                            </div>
                            <div class="field">
                                <label for="dress">Dress Code</label>
                                <input type="text" name="event[dress]" id="dress"
                                    placeholder="Enter details about special dress code/attire for the event" />
                            </div>
                            <div class="field">
                                <label for="signup">Signup link</label>
                                <input type="text" name="event[link]" id="signup"
                                    placeholder="Enter the link for sign up form if applicable" />
                            </div>
                            <div class="field">
                                <label for="message">Special Notes</label>
                                <textarea name="evemt[special]" id="message" rows="4"
                                    placeholder="Enter any special notes. If not sign up link provided, enter the details to sign up here"></textarea>
                            </div>
                        </div>
                        <ul class="actions">
                            <li><input type="submit" value="Create Event" /></li>
                        </ul>
                    </form>
                </div>
            </div>

        </section>

        <% include ../partials/footer.ejs %>

    </div>

    <% include ../partials/common-scripts.ejs %>
    <script>
        $(document).ready(() => {
            var currentDate = new Date().toISOString();
            currentDate = currentDate.substr(0, currentDate.indexOf('T') + 1);
            currentDate += "00:00";
            $("input[type='datetime-local']").val(currentDate);
        });

    </script>
</body>

</html>